doctype html
html
  head
    title IMDB Top 250 on Netflix Instant Streaming
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    link href='http://fonts.googleapis.com/css?family=Coming+Soon' rel='stylesheet' type='text/css'
    script src="http://jsapi.netflix.com/us/api/js/api.js"
    meta name="viewport" content="width=device-width, maximum-scale=1.0, user-scalable=no"

  body

    header
      .wrapper
        h1 Best On Instant
        a#instant-toggle.view-select href="#" data-text="STREAMING"
          .text ALL
          i.fontello-arrow-combo

    .sorting-types
      .wrapper
        - { imdb_ranking: '1 - 250', title: 'A - Z', mpaa_rating: 'RATING', release_year: 'YEAR', length: 'LENGTH' }.each do |sort_param, link_text|
          a.sorting data-remote="true" href="?sort=#{sort_param}" class="#{params[:sort] == sort_param.to_s ? 'sort-selected' : ''}" #{link_text}

    #page= yield
